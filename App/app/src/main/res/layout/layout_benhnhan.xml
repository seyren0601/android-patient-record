<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/chitiet_image"
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:src="@drawable/ic_profile_picture"/>

        <TextView
            android:id="@+id/chitiet_ten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TÊN BỆNH NHÂN"
            android:textColor="@color/white"
            android:textSize="30sp"/>
        <TextView
            android:id="@+id/chitiet_gioitinh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GIỚI TÍNH"
            android:textColor="@color/white"
            android:textSize="20sp"/>
        <androidx.appcompat.widget.AppCompatButton
            style="@style/Widget.AppCompat.Button"
            android:id="@+id/btn_them_buoikham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="THÊM BUỔI KHÁM"/>
        <androidx.appcompat.widget.AppCompatButton
            style="@style/Widget.AppCompat.Button"
            android:id="@+id/btn_edit_benhnhan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LƯU THAY ĐỔI"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="15dp"/>

            <TextView
                android:id="@+id/chitiet_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="ID BỆNH NHÂN"
                android:textColor="@color/white"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="5dp"/>
            <EditText
                android:id="@+id/chitiet_edit_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:hint="EDIT ID"
                android:textColorHint="@color/placeholder_text"
                android:textColor="@color/white"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="5dp"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BHYT"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="15dp"/>

            <TextView
                android:id="@+id/chitiet_bhyt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="BHYT BỆNH NHÂN"
                android:textColor="@color/white"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="5dp"/>
            <EditText
                android:id="@+id/chitiet_edit_bhyt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:hint="EDIT BHYT"
                android:textColorHint="@color/placeholder_text"
                android:textColor="@color/white"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="5dp"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TUỔI"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="15dp"/>

                <TextView
                    android:id="@+id/chitiet_tuoi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="TUỔI"
                    android:textColor="@color/white"
                    android:layout_marginStart="15dp"
                    android:layout_marginBottom="5dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/white"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NGÀY SINH"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="15dp"/>

                <TextView
                    android:id="@+id/chitiet_ngaysinh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="NGÀY SINH"
                    android:textColor="@color/white"
                    android:layout_marginStart="15dp"
                    android:layout_marginBottom="5dp"/>
                <EditText
                    android:id="@+id/chitiet_edit_ngaysinh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:hint="EDIT NGÀY SINH"
                    android:textColorHint="@color/placeholder_text"
                    android:textColor="@color/white"
                    android:layout_marginStart="15dp"
                    android:layout_marginBottom="5dp"
                    android:visibility="gone"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SỐ ĐIỆN THOẠI"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="15dp"/>

            <TextView
                android:id="@+id/chitiet_sdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="SỐ ĐIỆN THOẠI BỆNH NHÂN"
                android:textColor="@color/white"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="5dp"/>
            <EditText
                android:id="@+id/chitiet_edit_sdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:hint="EDIT SỐ ĐIỆN THOẠI"
                android:textColorHint="@color/placeholder_text"
                android:textColor="@color/white"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="5dp"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CĂN CƯỚC CÔNG DÂN"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="15dp"/>

            <TextView
                android:id="@+id/chitiet_cccd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="CCCD"
                android:textColor="@color/white"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="5dp"/>
            <EditText
                android:id="@+id/chitiet_edit_cccd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:hint="EDIT CCCD"
                android:textColorHint="@color/placeholder_text"
                android:textColor="@color/white"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="5dp"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ĐỊA CHỈ"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="15dp"/>

            <TextView
                android:id="@+id/chitiet_diachi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="ĐỊA CHỈ BỆNH NHÂN"
                android:textColor="@color/white"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="5dp"/>
            <EditText
                android:id="@+id/chitiet_edit_diachi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:hint="EDIT ĐỊA CHỈ"
                android:textColorHint="@color/placeholder_text"
                android:textColor="@color/white"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="5dp"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NGHỀ NGHIỆP"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="15dp"/>

            <TextView
                android:id="@+id/chitiet_nghenghiep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="NGHỀ NGHIỆP BỆNH NHÂN"
                android:textColor="@color/white"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="5dp"/>
            <EditText
                android:id="@+id/chitiet_edit_nghenghiep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:hint="EDIT NGHỀ NGHIỆP"
                android:textColorHint="@color/placeholder_text"
                android:textColor="@color/white"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="5dp"
                android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/chitiet_layout_lichsukham"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border">

            <TextView
                android:id="@+id/chitiet_lichsukham"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:textSize="30sp"
                android:text="LỊCH SỬ KHÁM"
                android:textColor="@color/url"/>
            <ListView
                android:id="@+id/chitiet_list_buoikham"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:cacheColorHint="@color/white"
                android:divider="@android:color/transparent"
                android:dividerHeight="10.0sp"/>
        </LinearLayout>
    </LinearLayout>



</ScrollView>